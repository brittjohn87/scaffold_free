<h1>Home Page</h1>

<h3>Let's create a new user:</h3>

<%= form_tag create_users_path do %>
	<%= text_field_tag :name, nil, placeholder: "What's your name?" %><br />
	<%= number_field_tag :age, nil, placeholder: "What's your age?" %><br />
  <%= submit_tag "Create User" %>
<% end %>


<h3>Creat a new product:</h3>
<%= form_for @product do |f| %>
	<%= f.text_field :name, placeholder: "Product Name" %><br />
	<%= f.number_field :price, placeholder: "Price", step: :any %><br />
	<%= f.number_field :quantity, placeholder: "Quantity" %><br />
	<%= f.submit "Create Product" %>
<% end %>